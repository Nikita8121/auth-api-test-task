generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model AuthToken {
  id           Int      @id @default(autoincrement())
  deviceId     String   @unique
  refreshToken String
  userId       Int
  user         User     @relation(fields: [userId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model User {
  id           Int         @id @default(autoincrement())
  email        String      @unique
  passwordHash String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  AuthToken    AuthToken[]
}

model File {
  id        Int      @id @default(autoincrement())
  name      String
  url       String
  mimeType  String
  size      Int
  s3Key     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
